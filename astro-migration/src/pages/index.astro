---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get recent posts (we'll implement this properly later)
const posts = [];
---

<Layout title="Home">
  <div class="space-y-8">
    <!-- Bio Section -->
    <section class="prose prose-lg dark:prose-invert max-w-none">
      <h1 class="text-4xl font-bold font-poppins mb-4">Hey, I'm Aravind!</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400">
        I'm a full-stack developer who loves building products that solve real problems.
        I write about web development, productivity, and my journey as an indie hacker.
      </p>
    </section>

    <!-- Recent Posts Section -->
    <section>
      <h2 class="text-2xl font-bold font-poppins mb-6">Recent Writings</h2>
      <div class="space-y-4">
        {posts.length > 0 ? (
          posts.map((post) => (
            <article class="border border-gray-200 dark:border-gray-800 rounded-lg p-6 hover:shadow-lg transition-shadow">
              <h3 class="text-xl font-semibold mb-2">
                <a href={`/writings/${post.slug}`} class="hover:text-blue-600 dark:hover:text-blue-400">
                  {post.data.title}
                </a>
              </h3>
              <p class="text-gray-600 dark:text-gray-400">{post.data.description}</p>
            </article>
          ))
        ) : (
          <p class="text-gray-600 dark:text-gray-400">No posts yet. Content coming soon!</p>
        )}
      </div>
    </section>

    <!-- Podcast & Speaking Section -->
    <section class="grid md:grid-cols-2 gap-8">
      <div>
        <h2 class="text-2xl font-bold font-poppins mb-4">Podcast</h2>
        <p class="text-gray-600 dark:text-gray-400">
          I host a podcast where I talk about building products, indie hacking, and web development.
        </p>
      </div>
      <div>
        <h2 class="text-2xl font-bold font-poppins mb-4">Speaking</h2>
        <p class="text-gray-600 dark:text-gray-400">
          I occasionally speak at conferences and meetups about web development and building products.
        </p>
      </div>
    </section>
  </div>
</Layout>
